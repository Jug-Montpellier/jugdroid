<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:jugdroid="http://schemas.android.com/apk/res/org.jug.montpellier.app.jugdroid"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:padding="8dp" android:background="@drawable/detailheader_rounded_rect"
		android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
		android:layout_marginTop="10dip">
		<org.jug.montpellier.app.jugdroid.ui.widget.RoundedImageView
			android:maxWidth="@dimen/thumbnail_size_width" android:maxHeight="@dimen/thumbnail_size_height"
			android:layout_height="@dimen/thumbnail_detail_size_height"
			android:layout_width="@dimen/thumbnail_detail_size_width"
			android:src="@drawable/user" android:id="@+id/logo"
			android:layout_gravity="top" />
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" android:paddingLeft="10dip">
			<TextView android:paddingLeft="10dp" android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="PlayApps" android:textStyle="bold" android:id="@+id/name"
				android:layout_gravity="center_horizontal" android:layout_width="fill_parent"
				android:textColor="@color/medium_gray" />
			<TextView android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="http://www.playapps.com" android:id="@+id/webSite"
				android:paddingLeft="10dip" android:autoLink="web"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="@color/green" android:textColorLink="@color/green"></TextView>
		</LinearLayout>
	</LinearLayout>
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1" android:layout_marginBottom="10dip" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="10dip">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:autoLink="web|email"
			android:id="@+id/description" android:text="PlayApps is the cloud platform for Play! applications."
			android:background="@drawable/detaildescription_rounded_rect"
			android:textColor="@color/white" android:textAppearance="?android:attr/textAppearanceMedium"
			android:padding="10dip"></TextView>
	</ScrollView>
</LinearLayout>