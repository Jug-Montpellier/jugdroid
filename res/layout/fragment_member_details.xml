<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:jugdroid="http://schemas.android.com/apk/res/org.jug.montpellier.app.jugdroid"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:padding="8dp">
	<org.jug.montpellier.app.jugdroid.ui.widget.RoundedImageView
		android:id="@+id/photo" android:maxWidth="@dimen/thumbnail_size_width"
		android:maxHeight="@dimen/thumbnail_size_height"
		android:layout_height="@dimen/thumbnail_detail_size_height"
		android:layout_width="@dimen/thumbnail_detail_size_width" android:src="@drawable/user"/>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="wrap_content">
			<TextView android:paddingLeft="10dp" android:gravity="center_vertical|left"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:id="@+id/fullname" android:textAppearance="?android:attr/textAppearanceLarge"
				 android:text="Eric Taix" android:textStyle="bold"/>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="10dip"
				android:id="@+id/personalURL" 
				android:autoLink="web" android:textAppearance="?android:attr/textAppearanceMedium" android:text="myURL"/>
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web|email" android:gravity="center_vertical|left" android:text="Job position + company" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/jobposition" android:paddingLeft="10dip" android:textColor="@color/green"></TextView>
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/companyURL" android:paddingLeft="10dip" android:text="Company URL"></TextView>
		</LinearLayout>
	</LinearLayout>
	<ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView1">
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingRight="10dip" android:autoLink="web|email" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/description" android:paddingLeft="10dip" android:text="Description"></TextView>
	</ScrollView>
</LinearLayout>