<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:jugdroid="http://schemas.android.com/apk/res/org.jug.montpellier.app.jugdroid"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:padding="8dp">
	<org.jug.montpellier.app.jugdroid.ui.widget.RoundedImageView
		android:id="@+id/photo" android:layout_height="@dimen/thumbnail_size_height"
		android:layout_width="@dimen/thumbnail_size_width" android:src="@drawable/user"></org.jug.montpellier.app.jugdroid.ui.widget.RoundedImageView>

	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="wrap_content">
		<TextView android:paddingLeft="10dp" android:gravity="center_vertical|left"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:textSize="20dip" android:text="Christophe Chamerling"
			android:id="@+id/fullname" android:textColor="@color/white" />
		<TextView android:layout_height="wrap_content"
			android:paddingLeft="10dip" android:layout_width="fill_parent"
			android:text="Responsable RD - ESII" android:gravity="center_vertical|left"
			android:textColor="@color/green" android:textSize="16dip"
			android:id="@+id/memberFonction"></TextView>
	</LinearLayout>

</LinearLayout>